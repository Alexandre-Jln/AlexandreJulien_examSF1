{% extends 'base.html.twig' %}

{% block title %}Détail{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Fiche de contact Employés</h1>

        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Prénom</th>
                <th>Nom de famille</th>
                <th>Email</th>
                <th>Secteur</th>
                <th>Photos</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.sector }}</td>
                    <td><img src="{{ user.photo }}" alt="{{ user.firstName }} {{ user.lastName }}" class="img-thumbnail" style="max-width: 100px;"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
