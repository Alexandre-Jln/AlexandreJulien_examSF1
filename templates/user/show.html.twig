{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1>Détails de l'utilisateur</h1>

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th scope="row">Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th scope="row">Nom de famille</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th scope="row">Secteur</th>
                <td>{{ user.sector }}</td>
            </tr>
            <tr>
                <th scope="row">Type de contrat</th>
                <td>{{ user.contractType }}</td>
            </tr>
            <tr>
                <th scope="row">Date de départ</th>
                <td>{{ user.departureDate ? user.departureDate|date('d-m-Y') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_user_index') }}">Retour à la liste</a>
        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
